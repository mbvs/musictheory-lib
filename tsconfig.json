{
  "compilerOptions": {
    "outDir": "./dist",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "inlineSourceMap": true,
    "lib": ["es2022"],
    "module": "commonjs",
    "target": "es2022",
    "jsx": "react",
    "allowJs": true,
  },
  "include": ["./src/**/*.ts"],
  "exclude": ["**/node_modules"]
}
